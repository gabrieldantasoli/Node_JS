<div class="container">
    {{#each users}}
        <div class="item">
            <h1>{{this.name}}</h1>
            <p>{{this.occupation}}</p>
            <div class="actions">
                <a href="/users/{{this.id}}">Ver detealhes</a>
                <a href="/users/edit/{{this.id}}">Editar</a>
                <form action="/users/delete/{{this.id}}" method="POST">
                    <input type="submit" value="excluir" class="delete-btn">
                </form>
            </div>
        </div>
    {{/each}}
</div>