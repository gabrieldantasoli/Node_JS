<section class="divCenter width100 height100 formbook">
    <h1>Cadastre Um Livro : </h1>

    <form action="/books/insertbook" method="POST" id="form_cadastro_books">
        <div class="form-control">
            <label for="title">Título : </label>
            <input type="text" name="title" id="title" placeholder="Digite o título do livro">
        </div>
        <div class="form-control">
            <label for="pagesqts">Nmr de Páginas : </label>
            <input type="number" name="pagesqtd" id="pagesqtd" placeholder="Quantidade de Páginas">
        </div>
        <input type="submit" value="Cadastrar">
    </form>
</section>